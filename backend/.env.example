# Environment Variables Template
# Copy this to .env and fill in your values

# MongoDB Connection (Required)
# Get from MongoDB Atlas or use local MongoDB
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/astrologer?retryWrites=true&w=majority

# Database name
DB_NAME=astrologer_db

# CORS Origins (comma-separated for multiple domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Emergent LLM Key for AI Chat (Required)
# Get from Emergent dashboard or use your own OpenAI key
EMERGENT_LLM_KEY=sk-emergent-xxxxx

# JWT Secret for Admin Authentication (Required)
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET=your_secure_random_string_here
